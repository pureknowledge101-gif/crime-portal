<script>
  // Simple table filters (SBA-friendly)
  const crimeSearch = document.getElementById("crimeSearch");
  const crimeRows = Array.from(document.querySelectorAll("#crimeTableBody tr"));

  crimeSearch.addEventListener("input", () => {
    const q = crimeSearch.value.toLowerCase().trim();
    crimeRows.forEach(row => {
      const text = row.innerText.toLowerCase();
      row.style.display = text.includes(q) ? "" : "none";
    });
  });

  const mayorSearch = document.getElementById("mayorSearch");
  const mayorRows = Array.from(document.querySelectorAll("#mayorTableBody tr"));

  mayorSearch.addEventListener("input", () => {
    const q = mayorSearch.value.toLowerCase().trim();
    mayorRows.forEach(row => {
      const text = row.innerText.toLowerCase();
      row.style.display = text.includes(q) ? "" : "none";
    });
  });
</script>

</body>
</html>
